{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "types": ["jest"],
      "moduleResolution": "node"
    }
  }
