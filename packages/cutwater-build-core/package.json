{
  "name": "@codification/cutwater-build-core",
  "version": "0.35.23",
  "description": "A library providing basic build tasks.",
  "homepage": "https://github.com/CodificationOrg/cutwater",
  "bugs": "https://github.com/CodificationOrg/cutwater/issues",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "gulp clean",
    "format": "prettier --loglevel warn --write \"src/**/*.ts\"",
    "lint": "eslint --fix src/**/*.ts",
    "test": "jest ",
    "test-integ": "jest --testMatch \"<rootDir>/src/**/*.(integ).(ts|js)?(x)\"",
    "build:compile": "yarn clean && yarn format && yarn lint && tsc",
    "build": "yarn test && yarn build:compile"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodificationOrg/cutwater.git",
    "directory": "packages/cutwater-build-core"
  },
  "keywords": [
    "common",
    "cutwater",
    "utilities",
    "support",
    "build",
    "gulp",
    "task",
    "codification"
  ],
  "author": {
    "name": "William Weiss",
    "url": "https://github.com/wweiss"
  },
  "license": "Apache-2.0",
  "private": false,
  "eslintConfig": {
    "extends": [
      "@codification/cutwater"
    ]
  },
  "prettier": "./includes/prettier-config",
  "dependencies": {
    "@codification/cutwater-nullable": "^0.35.23",
    "@types/gulp": "^4.0.7",
    "@types/jest": "^29.x",
    "@types/node": "^18.11.9",
    "ajv": "^6.10.2",
    "chalk": "^4.1.2",
    "del": "^5.1.0",
    "end-of-stream": "^1.4.1",
    "glob-escape": "^0.0.2",
    "gulp": "^4.0.2",
    "gulp-prettier": "^2.2.0",
    "jest": "^29.x",
    "jest-environment-jsdom": "^29.x",
    "prettier": "^2.8.4",
    "pretty-hrtime": "^1.0.3",
    "through2": "^3.0.1",
    "ts-jest": "^29.0.5",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/js-yaml": "^3.12.3",
    "tmp": "^0.2.1"
  }
}
