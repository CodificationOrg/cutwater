{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": true,
        "baseBranch": "master",
        "push": true,
        "preset": "angular",
        "postTargets": [
          "workspace:peer-version",
          "workspace:deploy",
          "workspace:github"
        ]
      },
      "configurations": {
        "alpha": {
          "baseBranch": "alpha",
          "releaseAs": "prerelease",
          "preid": "alpha"
        },
        "beta": {
          "baseBranch": "beta",
          "releaseAs": "prerelease",
          "preid": "beta"
        }
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "noBuild": true,
        "registry": "https://registry.npmjs.org"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "peer-version": {
      "executor": "@codification/cutwater-nx-plugin:peer-version"
    }
  }
}
